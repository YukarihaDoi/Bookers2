<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <!--<meta name="viewport" content="width=device-width,initial-scale=1">-->
     <%= csrf_meta_tags %>
     <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
     <script src="https://kit.fontawesome.com/c0f2e04516.js" crossorigin="anonymous"></script>
     <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <!--%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>-->
     <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>

      <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container">

        <a class="navbar-brand text-white " href="/"><span >Bookers</span></a>


        <!--隠れた時に出てくる3本線表記-->
        <button class="navbar-toggler" type="button" data-toggle="collapse"
        data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>


      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

      <% if user_signed_in? %>
        <div class="input-group-prepend">

        <!--<li>-->
        <!--<a class="nav-link text-white" href= "/users/user.id">-->
        <!--<i class="fas fa-home text-white"></i>Home</a>-->
        <!--</li>-->
　　　　<!--基本aタグは使わない-->

        <%= link_to user_path(current_user.id) ,class:"nav-link text-light" do %>
          <i class="fas fa-home"></i>Home
        <%end%>
        <%= link_to users_path ,class:"nav-link text-light" do %>
          <i class="fas fa-users"></i>Users
        <%end%>
        <%= link_to books_path ,class:"nav-link text-light" do %>
          <i class="fas fa-book-open"></i>Books
        <%end%>
        <%= link_to destroy_user_session_path, method: :delete ,class:"nav-link text-light" do %>
        <i class="fas fa-sign-out-alt"></i>Log out
        <%end%>

        <!--destroy_user_session_path-->

        <% else %>
        <li>
        <a class="nav-link text-white" href= "/" >
        <i class="fas fa-home text-white"></i>Home</a>
        </li>

        <li>
         <a class="nav-link text-white" href= "/home/about">
         <i class="fas fa-link"></i>About</a>
        </li>

        <li>
          <a class="nav-link text-white" href= "/users/sign_up">
          <i class="fas fa-user-plus"></i>Sign up</a>
        </li>

        <li>
          <a class="nav-link text-white" href= "/users/sign_in">
          <i class="fas fa-sign-in-alt"></i>Log in</a>
        </li>

      <% end %>
        </div>
        </ul>
      </div>
      </nav>
    </header>


    <main class="mb-auto">
        <%= yield %>
    </main>

    <footer class="shadow-sm">
      <div class="container">
       <div class="row no-gutters">
       <div class="col-md-4">
         <p>CopyRight Infratop.inc</p>
       </div>
       </div>
     </div>
    </footer>
  </body>
</html>