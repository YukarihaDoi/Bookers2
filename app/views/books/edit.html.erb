<h1>Editing Book</h1>

<% if @book.errors.any? %>
<% @book.errors.full_messages.each do |message| %>
      <div class="Error-message">
        <%= message %>_error
      </div>
    <% end %>
<% end %>

<!--元々の記述-->
<%= form_with model: @book, url: edit_book_path, method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>


