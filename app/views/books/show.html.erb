<!--投稿詳細-->
<% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
<% end %>

<p id="notice"></p>

<div class="container">
 <div class="row">

    <div class="col-md-3">
    <%= render 'users/profile', user: @user %>
    <br>
    <%= render 'books/newform',  book: @nbook %>
    </div>

    <!--<div class="col-md-1">-->

    <!--</div>-->

    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
    <table class="table table-hover table-inverse">

     <tbody>
      <tr>
       <td>
        <%= link_to user_path(@book.user.id) do %>
         <%= image_tag @book.user.get_profile_image(100,100) %>
         <p><%= @book.user.name %></p>
        <% end %>
       </td>

       <td>
        <%= link_to book_path(@book.id) do %>
         <p><%= @book.title %></p>
        <% end %>
       </td>

       <td>
        <p><%= @book.body %></p>

       </td>

      <% if @user.id == current_user.id %>
        <td>
        <%= link_to edit_book_path(@book.id) , class:"btn btn-success" do %>
        Edit
        <%end%>

       <!--%= link_to "編集", edit_book_path %>-->

        </td>
       <td>
        <%= link_to book_path(@book), method: :delete,class:"btn btn-danger" do%>
        Destroy
        <%end%>
        <!--%= link_to "削除", book_path(@book) , method: :delete %>-->
       </td>
       <%end%>
      </tr>
     </tbody>

    </table>
</div>
</div>
</div>