<div class="container">
 <div class="row">

    <div class="col-md-3">
    <%= render 'users/profile', user: @user  %>
    <%= render 'books/newform',  book: @nbook  %>
    </div>


     <div class="col-md-8">
     <table class="table table-striped">
       <thead>
          <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th colspan="4"></th>
          </tr>
       </thead>

      <tbody>
           <tr>
                <td>
                 <%= image_tag @book.user.get_profile_image(100,100) %>
                <p><%= @book.user.name %></p>
                </td>

               <td>
               <%= link_to book_path(@book.id) do %>
               <p><%= @book.title %></p>
               <% end %>
               </td>

               <td>
                <p><%= @book.body %></p>
               </td>
               <td>
                 <% if @book.user == current_user %>
                 <%= link_to "destroy", book_path(@book), method: :delete %>
                 <%= link_to "edit", edit_book_path %>
                 <% end %>
               </td>

           </tr>
       </tbody>
     </table>
     </div>

  </div>
</div>


