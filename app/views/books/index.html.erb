<!--User info部分1-->
 <div>
   <h3><%= @user.name %></h3>
   <%= image_tag @user.get_profile_image(100,100) %>

   <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
   <% end %>
 </div>

<h1>画像投稿フォーム</h1>
  <%= form_with model: @new_book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>
<!--User info部分1-->

<% @book.each do |book| %>
<div>
<p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
　<!--その人のマイページに飛ぶ-->

 
  <!--%= link_to user_path(book.id) do %>-->
  <p>ユーザーネーム：<%= book.user.name %></p>
  <!--% end %>-->
  <!--その人のマイページに飛ぶ-->


  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <!--その本の詳細ページに飛ぶ-->



  <p>Opinion：<%= book.body %></p>

</div>
<% end %>