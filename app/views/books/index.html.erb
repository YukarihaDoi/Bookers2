<!--投稿一覧（books）-->
<!--グリッドシステムのテスト: container, row, col-md-〇を正しく使-->
<% if @nbook.errors.any? %>
<%= @nbook.errors.count %>errors prohibited this obj from being saved:
　<ul>
  <% @nbook.errors.full_messages.each do |message| %>
  <li><%= message %></li>
　<% end %>
  </ul>
<% end %>

<div class="container">
 <div class="row">

    <div class="col-md-3">
    <%= render 'users/profile', user: @user  %>
    <%= render 'books/newform',  book: @nbook  %>
    </div>
    <div class="col-md-1">
    </div>

    <div class="col-md-8 ofset-md-1">
       <p id="notice"></p>
        <h2>Books</h2>
     <table class="table table-striped">
       <thead>
          <tr>
              <th>Image</th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
          </tr>
       </thead>

      <tbody>
      <% @books.each do |book| %>
           <tr>
               <td><%= image_tag book.user.get_profile_image(80,80) %>

             　<!--%= link_to user_path(book.user_id) do %>-->
                <!--<p>%= book.user.name %></p>-->
                <!--% end %>-->
                </td>

               <td>
               <%= link_to book_path(book.id) do %>
               <p><%= book.title %></p>
               <% end %>
               </td>

               <td>
                <p><%= book.body %></p>
               </td>
           </tr>
        <% end %>
       </tbody>
     </table>
     </div>

  </div>
</div>

