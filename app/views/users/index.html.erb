<!--ユーザー・一覧-->
<!--グリッドシステムのテスト: container, row, col-md-〇を正しく使えて-->

<div class="container">
 <div class="row">

    <div class="col-md-3">
    <%= render 'users/profile', user: @user  %>
    <%= render 'books/newform',  book: @nbook  %>
    </div>

    <div class="col-md-1">
    </div>


      <div class="col-xl-8 ofset-md-1">
        <p id="notice"></p>
       <h2>Users</h2>
     <table class="table table-striped">
       <thead>
          <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Introduction</th>
              <th colspan="4"></th>
          </tr>
       </thead>

      <tbody>
      <% @users.each do |h| %>
           <tr>
               <td><%= image_tag h.get_profile_image(100,100) %></td>
               <td><%= h.name %></td>
               <td><%= h.introduction %></td>
               <td><%= link_to "Show", user_path(h) %></td>
           </tr>
        <% end %>
       </tbody>
     </table>

  </div>
  </div>
</div>