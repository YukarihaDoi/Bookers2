<!--User infoが部分テンプレートに正しく実装されている-->

<!--＜左＞-->
<!--User info部分1-->
 <div>
   <h3><%= @user.name %></h3>
   <%= image_tag @user.get_profile_image(100,100) %>

   <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
   <% end %>
 </div>

<h1>画像投稿フォーム</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>
<!--User info部分1-->
<!-- ユーザーの投稿一覧 -->

<!--＜右＞-->
<% @users.each do |h| %>
<div>

  <p>投稿ユーザー画像：<%= image_tag h.get_profile_image(100,100) %></p>

  <p>ユーザーネーム：<%= h.name %></p>

  <!--その人のマイページに飛ぶ-->
  <!--その本の一覧ページに飛ぶ-->
</div>
<% end %>