<!--ユーザー・一覧-->
<!--main-->
<p id="notice"></p>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/profile', user: @user %>
      <br>
      <%= render 'books/newform', book: @nbook %>
    </div>

    <div class="col-md-1">

    </div>

    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Introduction</th>
            <!--余白-->
            <th></th>
            <th></th>
          </tr>
        </thead>

        <% @users.each do |h| %>
        <tbody>
          <tr>
            <th><%= image_tag h.get_profile_image(80,80) %></th>
            <th><%= h.name %></th>
            <th><%= h.introduction %></th>
            <th><%= link_to "Show", user_path(h) %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>
