 <% if flash[:notice] %>
    <p id="notice">
       <%= flash[:notice] %>
    </p>
   <% end %>

<!--マイページ-->
<div class="container">
 <div class="row">

    <div class="col-md-3">
    <%= render 'users/profile', user: @user  %>
    <%= render 'books/newform',  book: @nbook  %>
    </div>


     <div class="col-md-8">
     <table class="table table-striped">
       <thead>
          <tr>
              <th></th>
              <th></th>
              <th></th>
              <th colspan="3"></th>
          </tr>
       </thead>

      <tbody>
      <% @book.each do |book| %>
           <tr>
               <td>
               <%= image_tag book.user.get_profile_image(100,100) %>
               <%= link_to user_path(book.user_id) do %>
               <p><%= book.user.name %></p>
               <% end %>
               </td>


               <td>
                 <%= link_to book_path(book.id) do %>
                 <p><%= book.title %></p>
                 <% end %>
               </td>

               <td><%= book.body %></td>
                <td>
                <%= link_to "edit", edit_book_path %>
                </td>


                <td>
                 <%= link_to "destroy", book_path(book), method: :delete %>
                 <!--application.html.erbにjavascript_pack_tagを含んでいる (FAILED - 8)-->
               </td>
           </tr>
      <% end %>
       </tbody>
     </table>
     </div>

  </div>
</div>