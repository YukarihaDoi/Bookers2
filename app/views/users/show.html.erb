 <!--マイページ,ユーザー詳細-->
 <!--グリッドシステムのテスト: container, row, col-md-〇を正しく使え-->
 <% if flash[:notice] %>
    <p id="notice">
       <%= flash[:notice] %>
    </p>
   <% end %>

<div class="container">
 <div class="row">

    <div class="col-md-3">
    <%= render 'users/profile', user: @user  %>
    <%= render 'books/newform',  book: @nbook  %>
    </div>

    <div class="col-md-1">
    </div>

     <div class="col-md-8 ofset-md-1">
     <p id="notice"></p>
     <h2>Books</h2>
     <table class="table table-striped">
       <thead>
          <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
              <th colspan="4"></th>
          </tr>
       </thead>

      <tbody>
      <% @books.each do |book| %>
           <tr>
               <td>
               <%= image_tag book.user.get_profile_image(80,80) %>
               <%= link_to user_path(book.user_id) do %>
               <p><%= book.user.name %></p>
               <% end %>
               </td>


               <td>
                 <%= link_to book_path(book.id) do %>
                 <p><%= book.title %></p>
                 <% end %>
               </td>

               <td><%= book.body %></td>

                <td>
                <%= link_to "編集", edit_book_path(book.id) %>
                </td>


                <td>
                 <%= link_to "削除", book_path(book), method: :delete %>
                 <!--application.html.erbにjavascript_pack_tagを含んでいる (FAILED - 8)-->
               </td>
           </tr>
      <% end %>
       </tbody>
     </table>
     </div>

  </div>
</div>