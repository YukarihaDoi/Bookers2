<!--ユーザーのマイページ-->

<!--＜左＞-->
<!--User info部分1-->
 <div>
   <h3><%= @user.name %></h3>
   <%= image_tag @user.get_profile_image(100,100) %>

   <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
   <% end %>
 </div>

<h1>画像投稿フォーム</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>
<!--User info部分1-->
<!-- ユーザーの投稿一覧 -->

<!--＜右＞-->
<% @books.each do |book| %>
  <div>
  <!--%= link_to books_path(book.id) do %>-->
  <!--  %= image_tag post_image.get_image %>-->
  <!--% end %>-->
  <p>ユーザー：<%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <p>Title：<%= book.title %></p>
  <!--その本の詳細ページに飛ぶ-->
  <p>Opinion：<%= book.body %></p>

  <% if @user == current_user %>

  <% end %>
  </div>
<% end %>